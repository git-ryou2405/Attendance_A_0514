<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-sm btn-primary" %>
        <%= "　【" + l(@first_day, format: :middle) + "】時間管理表　" %>
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-sm btn-primary" %>
      </td>
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.designated_work_start_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.designated_work_end_time) %>
      </td>
      <td colspan="3">基本勤務時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：</td>
      <td><%= "" %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <% if @user.superior? %>
    <%= "【所属長承認申請のお知らせ】" %>
    <% if @r_count >= 1 %>
      <%= link_to "#{@r_count}件の所属長承認申請があります。", '#' %>
    <% end %>
    <br>
    <%= "【勤怠変更申請のお知らせ】" %>
    <% if @a_count >= 1 %>
      <%= link_to "#{@a_count}件の勤怠変更申請があります。", '#' %>
    <% end %>
    <br>
    <%= "【残業申請のお知らせ】" %>
    <% @users.each do |user| %>
      <% user.attendances.each do |attendance| %>
        <% if attendance.o_request == @user.name %>
          <% @o_count += 1 %>
        <% end %>
      <% end %>
    <% end %>
    
    <% if @o_count >= 1 %>
      <%= link_to "#{@o_count}件の残業申請があります。", attendances_notice_overtime_user_path(@user), remote: true  %>
    <% end %>
    <br>
  <% end %>
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", '#', class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ", '#', class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-striped table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外残業</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示書確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |oneday| %>
        <tr>
          <td><!--  -->
            <%= link_to "残業申請", attendances_req_overtime_user_path(params: { day: oneday }), remote: true, class: "btn btn-primary" %>
          </td>
          <td><!-- 日付 --><%= l(oneday.worked_on, format: :short) %></td>
          <td>
            <!-- 曜日 -->
            <% @wday = $days_of_the_week[oneday.worked_on.wday] %>
            <% if @wday == '土' %><font color="blue"><%= @wday %></font>
            <% elsif @wday == '日' %><font color="red"><%= @wday %></font>
            <% elsif %>
              <%= @wday %>
            <% end %>
          </td>
          <!-- 出社：時、分 -->
          <td><%= l(oneday.started_at.floor_to(15.minutes), format: :hour) if oneday.started_at.present? %></td>
          <td><%= l(oneday.started_at.floor_to(15.minutes), format: :minute) if oneday.started_at.present? %></td>
          <td>
            <!-- 出社ボタン -->
            <% if btn_text = attendance_state(oneday) %>
              <% if oneday.started_at.nil? %>
                <%= link_to "#{btn_text}", user_attendance_path(@user, oneday), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
            <% end %>
          </td>
          <!-- 退社：時、分 -->
          <td><%= l(oneday.finished_at.floor_to(15.minutes), format: :hour) if oneday.finished_at.present? %></td>
          <td><%= l(oneday.finished_at.floor_to(15.minutes), format: :minute) if oneday.finished_at.present? %></td>
          <!-- 退社ボタン -->
          <td>
            <% if btn_text = attendance_state(oneday) %>
              <% if oneday.started_at.present? && oneday.finished_at.nil? %>
                <%= link_to "#{btn_text}", user_attendance_path(@user, oneday), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
            <% end %>
          </td>
          <!-- 在社時間 -->
          <td>
            <% if oneday.started_at.present? && oneday.finished_at.present? %>
              <%= str_times = working_times(oneday.started_at.floor_to(15.minutes), oneday.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <!-- 備考 -->
          <td><%= oneday.note %></td>
          
          <% if oneday.end_time.present? && !oneday.o_request.nil? %>
            <!-- 終了予定時間：時、分 -->
            <td><%= oneday.end_time.hour %></td>
            <td><%= oneday.end_time.min %></td>
            <!-- 時間外残業 -->
            <td>
                <!--比較用指定勤務終了時間の作成-->
                <% @plan_time = Time.local(oneday.end_time.year, oneday.end_time.month, oneday.end_time.day,  @user.designated_work_end_time.hour-9, @user.designated_work_end_time.min, 0) %>
                <!--タイムゾーンの修正-->
                <% @plan_time.in_time_zone("Asia/Tokyo") %>
                
                <% if oneday.nextday.present? %>
                  <%= (oneday.end_time.since(1.days) - @plan_time) / 3600 %>
                <% else %>
                  <%= (oneday.end_time - @plan_time) / 3600 %>
                <% end %>
            </td>
          <% else %>
            <td></td>
            <td></td>
            <td></td>
          <% end %>
          <!-- 業務処理内容-->
          <td>
            <%= oneday.business_process %>
          </td>
          <!-- 指示書確認-->
          <td>
            <% unless oneday.o_request.nil? %>
            <%= "#{oneday.o_request}へ残業申請中" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="6"></td>
        <td colspan="1">在社時間合計</td>
        <td colspan="5"></td>
        <td rowspan="2">
          所属長承認　未<br>
          
          <%= link_to "申請", '#', class: "btn btn-primary" %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="6"></td>
        <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
      </tr>
    </tfoot>
  </table>
  
  <div class="center">
    <%= link_to "↑", current_user, class: "btn btn-default" %>
    <%= link_to "ユーザ一覧へ", users_path, class: "btn btn-default" %>
  </div>
</div>



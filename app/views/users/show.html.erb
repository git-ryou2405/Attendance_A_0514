<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-sm btn-info" %>
        <%= "　【" + l(@first_day, format: :middle) + "】時間管理表　" %>
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-sm btn-info" %>
      </td>
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.designated_work_start_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.designated_work_end_time) %>
      </td>
      <td colspan="3">基本勤務時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：</td>
      <td><%= "" %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <% if @user.admin? %>
    <%= link_to "【所属長承認申請のお知らせ】", '#' %><br>
    <%= link_to "【勤怠変更申請のお知らせ】", '#' %><br>
    <%= link_to "【残業申請のお知らせ】", '#' %><br>
  <% end %>
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", '#', class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ", '#', class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-striped table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示書確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><!--  -->
            <%= link_to "残業申請", overtime_apply_user_path(@user, params: { day: day.worked_on }), remote: true, class: "btn btn-primary" %>
          </td>
          <td><!-- 日付 --><%= l(day.worked_on, format: :short) %></td>
          <td>
            <!-- 曜日 -->
            <% @wday = $days_of_the_week[day.worked_on.wday] %>
            <% if @wday == '土' %><font color="blue"><%= @wday %></font>
            <% elsif @wday == '日' %><font color="red"><%= @wday %></font>
            <% elsif %>
              <%= @wday %>
            <% end %>
          </td>
          <!-- 出社：時、分 -->
          <td><%= l(day.started_at.floor_to(15.minutes), format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :minute) if day.started_at.present? %></td>
          <td>
            <!-- 出社ボタン -->
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <!-- 退社：時、分 -->
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :minute) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <!-- 在社時間 -->
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><!-- 備考 --><%= day.note %></td>
          <td><!--  --></td>
          <td><!--  --></td>
          <td><!--  --></td>
          <td><!--  --></td>
          <td><!--  --></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="6"></td>
        <td colspan="1">在社時間合計</td>
        <td colspan="5"></td>
        <td rowspan="2">
          所属長承認　未<br>
          
          <%= link_to "申請", '#', class: "btn btn-primary" %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="6"></td>
        <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
      </tr>
    </tfoot>
  </table>
  
  <div class="center">
    <%= link_to "↑", current_user, class: "btn btn-default" %>
    <%= link_to "ユーザ一覧へ", users_path, class: "btn btn-default" %>
  </div>
</div>


<!--モーダルウインドウ表示-->
<div id="overtime_apply" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
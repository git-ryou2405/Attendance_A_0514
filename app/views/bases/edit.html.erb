<% provide(:title, "Base edit") %>
<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '編集する') %>
<h1>拠点編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>
    
      <%= f.label :base_no, class: "label-#{yield(:class_text)}" %>
      <%= f.number_field :base_no, class: "form-control" %>
    
      <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :attendance_type, class: "label-#{yield(:class_text)}" %><br>
      <%= f.select :attendance_type, ["出勤", "退勤"], class: "form-control" %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>
<% provide(:title, "Top") %>
<div class="center jumbotron">
  <h1>勤怠システム</h1>
  <% if logged_in? %>
  <%= submit_tag "ログイン状態です", name: nil, class: "btn btn-primary btn-block", disabled:"disabled" %>
